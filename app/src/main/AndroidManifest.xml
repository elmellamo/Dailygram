<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lee.dailygram">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/dailygram_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.lee.dailygram.Home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.lee.dailygram.Likes.LikesActivity"></activity>
        <activity android:name="com.example.lee.dailygram.Profile.ProfileActivity"></activity>
        <activity android:name="com.example.lee.dailygram.Share.ShareActivity"></activity>
        <activity android:name="com.example.lee.dailygram.Profile.AccountSettingsActivity"></activity>
        <activity android:name="com.example.lee.dailygram.Login.RegisterActivity"></activity>
        <activity android:name="com.example.lee.dailygram.Login.LoginActivity"></activity>
        <activity android:name="com.example.lee.dailygram.Share.NextActivity"></activity>
        <activity android:name="com.example.lee.dailygram.Search.SearchActivity"
            android:windowSoftInputMode="adjustNothing"/>
    </application>

</manifest>